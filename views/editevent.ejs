<!DOCTYPE html>
<html lang="en">
    <%- include('partials/navbar') %>
<body class="event-page">

    <!-- Hero Section -->
    <section class="hero" style="background-color: #f4f4f4; padding: 40px 0; text-align: center;">
        <h1>Edit Event Details</h1>
        <h3 style="width: 50%; margin: 0 auto;">Update the details of your event below. Make any necessary changes and submit to save.</h3>
    </section>

    <!-- Event Form Section -->
    <section class="form-section" style="padding: 40px 0;">
        <div class="form-container" style="max-width: 900px; margin: 0 auto; background-color: white; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
            <h2>Event Details</h2>
            <!-- Replace `event` with the actual event object from your backend -->
            <form action="/editevent/<%= event.hostid %>" method="POST">

                <div class="form-group">
                    <label for="HostFirstName">First Name:</label>
                    <input type="text" id="HostFirstName" name="HostFirstName" value="<%= event.hostfirstname %>" required>
                </div>

                <div class="form-group">
                    <label for="HostLastName">Last Name:</label>
                    <input type="text" id="HostLastName" name="HostLastName" value="<%= event.hostlastname %>" required>
                </div>

                <div class="form-group">
                    <label for="HostEmail">E-Mail:</label>
                    <input type="email" id="HostEmail" name="HostEmail" value="<%= event.hostemail %>" required>
                </div>

                <div class="form-group">
                    <label for="EventDate">Event Date:</label>
                    <input type="date" id="EventDate" name="EventDate" value="<%= event.eventdate.toISOString().split('T')[0] %>" required>
                </div>

                <div class="form-group">
                    <label for="EventStartTime">Start Time:</label>
                    <input type="time" id="EventStartTime" name="EventStartTime" value="<%= event.eventstarttime %>" required>
                </div>

                <div class="form-group">
                    <label for="EventStrAddress">Street Address:</label>
                    <input type="text" id="EventStrAddress" name="EventStrAddress" value="<%= event.eventstraddress %>" required>
                </div>

                <div class="form-group">
                    <label for="EventCity">City:</label>
                    <input type="text" id="EventCity" name="EventCity" value="<%= event.eventcity %>" required>
                </div>

                <div class="form-group">
                    <label for="EventState">State:</label>
                    <input type="text" id="EventState" name="EventState" value="<%= event.eventstate %>" required>
                </div>

                <div class="form-group">
                    <label for="EventZip">ZIP Code:</label>
                    <input type="text" id="EventZip" name="EventZip" value="<%= event.eventzip %>" required>
                </div>

                <div class="form-group">
                    <label>Service Type:</label>
                    <div class="radio-option">
                        <input type="radio" id="sewing" name="ServiceType" value="sewing" <%= event.servicetype === 'sewing' ? 'checked' : '' %> >
                        <label for="sewing">Sewing</label>
                    </div>
                    <div class="radio-option">
                        <input type="radio" id="non-sewing" name="ServiceType" value="non-sewing" <%= event.servicetype === 'non-sewing' ? 'checked' : '' %> >
                        <label for="non-sewing">Non-sewing</label>
                    </div>
                    <div class="radio-option">
                        <input type="radio" id="both" name="ServiceType" value="both" <%= event.servicetype === 'both' ? 'checked' : '' %> >
                        <label for="both">Both</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Attendance">Estimated Attendance:</label>
                    <input type="number" id="Attendance" name="Attendance" value="<%= event.attendance %>" min="0" required>
                </div>

                <div class="form-group">
                    <label for="GroupAge">Group Age:</label>
                    <select id="GroupAge" name="GroupAge" required>
                        <option value="12-18" <%= event.groupage === '12-18' ? 'selected' : '' %>>12-18</option>
                        <option value="19-30" <%= event.groupage === '19-30' ? 'selected' : '' %>>19-30</option>
                        <option value="30+" <%= event.groupage === '30+' ? 'selected' : '' %>>30+</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="EventName">Contact Name:</label>
                    <input type="text" id="EventName" name="EventName" value="<%= event.eventname %>" required>
                </div>

                <div class="form-group">
                    <label for="HostPhone">Phone Number:</label>
                    <input type="tel" id="HostPhone" name="HostPhone" value="<%= event.hostphone %>" required pattern="[0-9]{10}">
                </div>

                <div class="form-group-jen">
                    <label for="JenShareStory">Jen will share her story:</label>
                    <input type="checkbox" id="JenShareStory" name="JenShareStory" value="true" <%= event.jensharestory === true ? 'checked' : '' %> >
                </div>

                <div class="form-group-jen">
                    <label>Event Privacy:</label>
                    <div>
                        <input type="radio" id="Private" name="Openness" value="private" <%= event.openness === 'private' ? 'checked' : '' %> required>
                        <label for="Private">Private</label>
                    </div>
                    <div>
                        <input type="radio" id="Public" name="Openness" value="public" <%= event.openness === 'public' ? 'checked' : '' %> >
                        <label for="Public">Public</label>
                    </div>
                </div>

                <button type="submit" class="submit-btn" style="width: 100%; max-width: 900px; padding: 15px; background-color: rgb(88, 88, 255); color: white; border: none; border-radius: 8px; cursor: pointer; margin-top: 20px; font-size: 1rem;">
                    Unsubscribe
                </button>
            </form>
        </div>
    </section>
</body>
</html>